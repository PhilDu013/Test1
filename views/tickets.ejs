<!DOCTYPE html>
<html>
  <head>
    <title>TicEtTac - login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%- include('./partials/header.ejs') %> 

    <h4 class="text-white offset-3 mt-5 mb-3">My tickets:</h4>
    <div class="container col-10">
      <table class="table bg-white table-borderless">
          <thead>
            <tr>
              <th scope="col">N°</th>
              <th scope="col">Journey</th>
              <th scope="col">Date</th>
              <th scope="col">Departure time</th>
              <th scope="col">Price</th>
            </tr>
          </thead>
    <% for (i=0;i<bookings.length;i++) { %>
        <tbody>
          <tr class="ticket-item">
            <th scope="row"><%= i+1 %></th>
            <td><%=bookings[i].departure%> / <%=bookings[i].arrival%></td>
            <td><%=date[i]%></td>
            <td><%=bookings[i].departureTime%></td>
            <td><%=bookings[i].price%> €</td>
            <% } %>
            <tr class="table-danger">
              <th scope="row" >Total</th>
              <td></td>
              <td></td>
              <td></td>
              <% var total = 0 
              for (i=0;i<bookings.length;i++) {
                total += bookings[i].price
              } %> 
              <td><%= total %> €</td>
            </tr>
            </tbody>
            </table>
          </div>
          <div class="offset-10">
            <a class="btn btn-danger" href="/">Confirm</a>
        </div>
    <%- include('./partials/footer.ejs') %> 
  </body>
</html>